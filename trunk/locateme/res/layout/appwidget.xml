<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/widget30"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center" android:background="@drawable/widget_bgd"
		android:orientation="horizontal">

		<ImageView android:id="@+id/icon_choice_action"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true" style="@style/LocateMeImageView"
			android:enabled="false" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:paddingRight="2dip" android:paddingLeft="2dip" android:src="@drawable/line" />


		<TextView android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:id="@+id/address_textview"
			android:text="@string/loading" style="@style/Text.WordTitle" />

	</LinearLayout>
	
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/more_textview" 
			android:layout_marginBottom="28dp" android:layout_marginRight="11dp"
			android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:textSize="10sp" 
			android:textColor="@android:color/black" />
	

</RelativeLayout>
